<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dhe_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tumbutton"
        android:layout_alignParentTop="true"/>

    <Button
        android:id="@+id/tumbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/PurpleButtonBackGroundColor"
        android:textColor="@color/PurpleButtonTextColor"
        android:text="@string/pick_a_date" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/BrushedGold"
        android:gravity="center_horizontal"
        android:id="@+id/empty_data"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>