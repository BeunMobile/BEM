<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="70dp"
    android:layout_height="70dp"
    android:layout_gravity="center"
    android:padding="16dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/firstcolor"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/firstday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/wallet_bright_foreground_holo_dark"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/firstmonth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/wallet_bright_foreground_holo_dark"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/firstyear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/firstmonth"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/wallet_bright_foreground_holo_dark"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/seccolor"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/secday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/wallet_bright_foreground_holo_dark"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/secmonth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/wallet_bright_foreground_holo_dark"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/secyear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/secmonth"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/wallet_bright_foreground_holo_dark"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp">

                <TextView
                    android:id="@+id/titletext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/BrushedTextColor"
                    android:textSize="15sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>