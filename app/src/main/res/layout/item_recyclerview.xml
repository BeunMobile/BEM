<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/firstday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Day"
                android:textColor="@color/BrushedTextColor"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/firstmonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/firstday"
                android:layout_centerHorizontal="true"
                android:text="Month"
                android:textColor="@color/BrushedTextColor"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/firstyear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="Year"
                android:textColor="@color/BrushedTextColor"
                android:textSize="14sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/secday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Day"
                android:textColor="@color/BrushedTextColor"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/secmonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/secday"
                android:layout_centerHorizontal="true"
                android:text="Month"
                android:textColor="@color/BrushedTextColor"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/secyear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="Year"
                android:textColor="@color/BrushedTextColor"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/titletext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="Title here."
                android:textColor="@color/BrushedTextColor"
                android:textSize="17sp" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>