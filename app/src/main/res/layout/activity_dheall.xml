<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bilgiislem.sems.beunapp.AkademikTakvim.GBYActivity"
    android:background="@color/wallet_bright_foreground_holo_dark">

    <include
        android:id="@+id/main_toolbar"
        layout="@layout/item_toolbar" />

    <ListView
        android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_toolbar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/BrushedGreenTextColor"
        android:gravity="center_horizontal"
        android:text="@string/loading_yemek"
        android:id="@+id/loading_data"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>